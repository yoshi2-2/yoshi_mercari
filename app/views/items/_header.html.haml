          - if user_signed_in?
            %li
              = link_to 'マイページ', "#", class: "header__btn--red"
            %li
              = link_to 'お知らせ' , "#", class: "header__btn--white"
            %li
              = link_to 'やることリスト', "#", class: "header__btn--white"
          - else
            %li
              = link_to 'ログイン', new_user_session_path, class: "header__btn--red"
            %li
              = link_to '新規登録' , new_user_registration_path , class: "header__btn--white"
